if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if which update-icon-caches >/dev/null 2>&1 ; then
		update-icon-caches /usr/share/icons/Mint-Y /usr/share/icons/Mint-Y-Aqua /usr/share/icons/Mint-Y-Blue /usr/share/icons/Mint-Y-Brown /usr/share/icons/Mint-Y-Grey /usr/share/icons/Mint-Y-Orange /usr/share/icons/Mint-Y-Pink /usr/share/icons/Mint-Y-Purple /usr/share/icons/Mint-Y-Red /usr/share/icons/Mint-Y-Sand /usr/share/icons/Mint-Y-Teal /usr/share/icons/Mint-Y-Yellow
		update-icon-caches /usr/share/icons/Mint-Y-Dark /usr/share/icons/Mint-Y-Dark-Aqua /usr/share/icons/Mint-Y-Dark-Blue /usr/share/icons/Mint-Y-Dark-Brown /usr/share/icons/Mint-Y-Dark-Grey /usr/share/icons/Mint-Y-Dark-Orange /usr/share/icons/Mint-Y-Dark-Pink /usr/share/icons/Mint-Y-Dark-Purple /usr/share/icons/Mint-Y-Dark-Red /usr/share/icons/Mint-Y-Dark-Sand /usr/share/icons/Mint-Y-Dark-Teal /usr/share/icons/Mint-Y-Dark-Yellow
	fi
fi
